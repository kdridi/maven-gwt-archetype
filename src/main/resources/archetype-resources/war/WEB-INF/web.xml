<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<servlet>
		<servlet-name>applicationServlet</servlet-name>
		<servlet-class>${package}.server.ApplicationServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>applicationServlet</servlet-name>
		<url-pattern>/${artifactId}/application</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>